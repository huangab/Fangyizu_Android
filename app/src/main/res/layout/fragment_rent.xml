<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_rent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout

            android:id="@+id/ll_rent_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rent_no_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="未交租"
                    android:textColor="@color/activation"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/tv_rent_no_pay_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(10)"
                    android:textColor="@color/activation"
                    android:textSize="15sp"/>


            </LinearLayout>


            <View
                android:id="@+id/view_blue_left"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/activation"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray"/>

        <LinearLayout
            android:id="@+id/ll_rent_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rent_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="已交租"
                    android:textColor="@color/no_activation"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/tv_rent_pay_size"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(20)"
                    android:textColor="@color/no_activation"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:id="@+id/view_blue_right"

                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/white"/>

        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/wv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>


</LinearLayout>