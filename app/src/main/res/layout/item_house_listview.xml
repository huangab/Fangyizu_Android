<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
    >

    <TextView
        android:id="@+id/tv_house_btn"
        android:layout_width="56dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/selector_white_button"
        android:gravity="center"
        android:text="续租"
        android:textColor="@color/background_color"
        android:textSize="@dimen/text_06"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_house_roomnums"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:text="103"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_03"/>

        <LinearLayout
            android:id="@+id/ll_telephone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_house_telephone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/help_boda"/>

            <TextView
                android:id="@+id/tv_house_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/all_text_color"
                android:textSize="@dimen/text_04"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_house_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩?天到期"
                android:textColor="@color/all_text_color"
                android:textSize="@dimen/text_04"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>