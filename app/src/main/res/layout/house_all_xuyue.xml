<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--显示楼号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/activation"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                >

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="房产:"-->
                <!--android:textSize="@dimen/text_03"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_xuyue_get_house"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="幸福小区"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_02"/>


                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_xuyue_get_room"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108"
                        android:textColor="@color/white"

                        android:textSize="@dimen/text_02"/>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="租金*"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_04"/>

                    <EditText
                        android:id="@+id/et_xuyue_zujin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:paddingRight="5dp"
                        android:selectAllOnFocus="true"
                        android:text="888"
                        android:textSize="@dimen/text_04">

                        <requestFocus/>
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/lightgray"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="元/月"
                        android:textColor="@color/all_text_color"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="押金*"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_04"/>

                    <EditText
                        android:id="@+id/et_xuyue_yajin"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:paddingRight="5dp"
                        android:selectAllOnFocus="true"
                        android:text="888"
                        android:textSize="@dimen/text_04">

                        <requestFocus/>
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/lightgray"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="元"
                        android:textColor="@color/all_text_color"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_xuyue_qizuqiri"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_top_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="起租日期*"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_04"/>

                <TextView
                    android:id="@+id/tv_xuyue_qizuriqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="2016/08/13"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"
                    android:textStyle="normal"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/me_small_go"/>
            </LinearLayout>


            <!--租期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="租期*(输入可快速计算)"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_04"/>

                    <EditText
                        android:id="@+id/et_xuyue_zuqi"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingRight="5dp"
                        android:selectAllOnFocus="true"
                        android:text="12"
                        android:textSize="@dimen/text_04">

                        <requestFocus/>
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/lightgray"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="个月"
                        android:textColor="@color/all_text_color"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_xuyue_xuyueriqi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_top_bottom_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="续约至*"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_04"/>

                <TextView
                    android:id="@+id/tv_xuyue_xuyueriqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="2016/08/13"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"
                    android:textStyle="normal"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/me_small_go"/>
            </LinearLayout>
            <!-- 白条-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white"></LinearLayout>


            <!--收费周期-->
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@color/white"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="收费周期"
                    android:textColor="@color/background_color"
                    android:textSize="@dimen/text_04"/>


            </RelativeLayout>

            <!--租金-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="租金*"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_04"/>

                    <EditText
                        android:id="@+id/et_xuyue_zujin_zhouqi"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingRight="5dp"
                        android:selectAllOnFocus="true"
                        android:text="1"
                        android:textSize="@dimen/text_04">


                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightgray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_middle"
                        android:layout_marginRight="@dimen/padding_middle"
                        android:text="月/次"
                        android:textColor="@color/all_text_color"/>
                </LinearLayout>
            </LinearLayout>

            <!--其他费用-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="其他费用*"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_04"/>

                    <EditText
                        android:id="@+id/et_xuyue_qitafeiyong"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingRight="5dp"
                        android:selectAllOnFocus="true"
                        android:text="1"
                        android:textSize="@dimen/text_04">


                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightgray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_middle"
                        android:layout_marginRight="@dimen/padding_middle"
                        android:text="月/次"
                        android:textColor="@color/all_text_color"/>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:text="当前"
                android:textColor="@color/black"
                android:textSize="@dimen/text_04"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="租金"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"/>

                <TextView
                    android:id="@+id/tv_xuyue_old_yajin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:text="888"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_xuyue_old_yajin_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/月"
                    android:textColor="@color/all_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="押金"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"/>

                <TextView
                    android:id="@+id/tv_xuyue_old_zujin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:text="888"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_xuyue_old_zujin_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/all_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="合约到期"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"/>

                <TextView
                    android:id="@+id/tv_xuyue_old_riqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:text="2016-08-13"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_04"
                    android:textStyle="normal"/>

            </LinearLayout>
            <!-- 白条-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"></LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_xuyue_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_background_button"
            android:text="点击续约"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size"/>
    </LinearLayout>
</LinearLayout>