<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_house_all_shouzu"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_middle"
    android:paddingRight="@dimen/padding_middle">

    <CheckBox
        android:id="@+id/rb_item_house_all_shouzu"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:checked="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">

        <TextView
            android:id="@+id/tv_item_house_all_shouzu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租金"
            android:textColor="@color/black"
            android:textSize="@dimen/text_04" />

        <TextView
            android:id="@+id/tv_item_house_all_shouzu_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:text="3000元/月"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_item_house_all_shouzu_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_item_house_all_shouzu_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.00元/立方"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_item_house_all_shouzu_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_middle"
                android:text="2015-07-15"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_house_all_shouzu_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_small"
        android:src="@mipmap/me_big_go"/>
</LinearLayout>