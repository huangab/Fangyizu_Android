<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_up_address_sheng"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/selector_top_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"/>

                <TextView
                    android:id="@+id/tv_up_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="如,小区、街道、村"
                    android:textColor="@color/background_color"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_big_go"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/selector_top_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域"/>

                <TextView
                    android:id="@+id/tv_up_address_sheng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="省市区"
                    android:textColor="@color/background_color"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_big_go"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:layout_marginTop="20dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼名"/>

                <EditText
                    android:id="@+id/et_house_louname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="right|center_vertical"
                    android:hint="如,平安公寓"
                    android:paddingRight="25dp"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textSize="@dimen/text_05">

                    <requestFocus>

                    </requestFocus>
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_up_louchengNums"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/selector_top_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼层数"/>

                <TextView
                    android:id="@+id/tv_up_louchengNums"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="楼层数量"
                    android:textColor="@color/background_color"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_big_go"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/top_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="是否带电梯"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sb_up_dianti"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/custom_text_state_color"
                    android:textSize="16dp"
                    app:kswTextOff="Off"
                    app:kswTextOn="On"
                    app:kswTintColor="@color/button_color"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:layout_marginTop="20dp"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_middle"
                android:text="上传图片"/>

            <LinearLayout
                android:id="@+id/ll_up_add_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_up_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/tianjia_icon"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_up_ZuoBianPeiTao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top_bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/padding_middle"
                    android:text="周边配套"/>

                <ProgressBar
                    android:id="@+id/pb_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_toLeftOf="@+id/iv_up_shanjiao"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_up_shanjiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/padding_middle"
                    android:clickable="false"

                    android:src="@mipmap/xiala_gray_icon"/>
            </RelativeLayout>

            <com.fangku.commonlibrary.widget.NoScrollGridView
                android:id="@+id/nsgv_up_zoubian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="5"
                android:visibility="gone">

            </com.fangku.commonlibrary.widget.NoScrollGridView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_up_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_button"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size"/>

        <Button
            android:id="@+id/bt_up_other"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_background_button"
            android:text="选择房产"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size"/>

        <ImageView
            android:id="@+id/bt_up_delete"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_red_button"
            android:padding="7dp"
            android:src="@mipmap/lajitong"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size"/>
    </LinearLayout>
</LinearLayout>