<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lightgray" />

    <LinearLayout
        android:id="@+id/ll_hydropower"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_hydropower_click"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hydropower_roomnums"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="103"
                android:textColor="@color/all_text_color"
                android:textSize="@dimen/text_03" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_hydropower_oldnums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1225"
                    android:textColor="@color/all_text_color"
                    android:textSize="@dimen/text_03" />

                <TextView
                    android:id="@+id/tv_hydropower_oldtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2016-7-8"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hydropower_now"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_hydropower_nownums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="1255"
                    android:textColor="@color/activation"
                    android:textSize="@dimen/text_03" />

                <TextView
                    android:id="@+id/tv_hydropower_nowtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2016-7-8"
                    android:textColor="@color/activation"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_house_btn"
                android:layout_width="56dp"
                android:layout_height="34dp"
                android:background="@drawable/selector_white_button"
                android:gravity="center"
                android:text="操作"
                android:textColor="@color/background_color"
                android:textSize="@dimen/text_06" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>