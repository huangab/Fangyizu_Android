<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_input_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/background_color"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="输入费用"
                android:textColor="@color/white"
                android:textSize="@dimen/text_03"/>

            <ImageView
                android:id="@+id/iv_input_quit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@mipmap/delete"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/fillet_white_only">

                <EditText
                    android:id="@+id/et_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="最大值9999,最小值0.01"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:selectAllOnFocus="true"
                    android:text="0"
                    android:textSize="@dimen/text_03"
                    />

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/background_color"/>

                <TextView
                    android:id="@+id/tv_input_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="清空"
                    android:textColor="@color/background_color"/>
            </LinearLayout>

            <Button
                android:id="@+id/bt_input_ok"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_red_button"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/text_04"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>