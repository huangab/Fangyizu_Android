<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_title_top_hyd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/background_color">

            <TextView
                android:id="@+id/tv_title_caobiao_left"

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="抄表"
                android:textColor="@color/white"
                android:textSize="@dimen/text_04"/>

            <TextView
                android:id="@+id/tv_title_caobiao_right"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="维修"
                android:textColor="@color/white"
                android:textSize="@dimen/text_04"/>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/hydropower_title_botton"
                android:orientation="horizontal"
                android:padding="1dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rd_hydropower_left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_red_radiobutton_left"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="收入"
                        android:textColor="@color/background_color"/>

                    <RadioButton
                        android:id="@+id/rd_hydropower_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_red_radiobutton_right"
                        android:button="@null"
                        android:gravity="center"
                        android:text="支出"
                        android:textColor="@color/white"/>
                </RadioGroup>
            </LinearLayout>
        </RelativeLayout>
        <!-- 横线-->
        <ImageView
            android:visibility="gone"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/black1"/>
    </LinearLayout>
</RelativeLayout>