<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="20dp"
    android:gravity="center_vertical"
    android:paddingRight="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_item_hydropower_history_roomId"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="2"
        android:textSize="@dimen/text_04"/>

    <TextView
        android:id="@+id/tv_item_hydropower_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-08-13"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/text_04"/>

    <TextView
        android:id="@+id/tv_item_hydropower_history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:38:18"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/text_04"/>

    <TextView
        android:id="@+id/tv_item_hydropower_history_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未收"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/text_04"/>



</LinearLayout>